<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /en-new/

  # Prevent directory listings
  Options -Indexes

  # 1. If the request is for an asset file in the assets directory
  #    AND it does not exist, return a real 404. Do NOT fallback to index.html.
  #    This fixes the "MIME type text/html" error for missing scripts.
  RewriteCond %{REQUEST_URI} ^/en-new/assets/ [NC]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^ - [R=404,L]

  # 2. Standard SPA Routing:
  #    If the requested file or directory exists, serve it.
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  #    Otherwise, rewrite everything else to index.html
  RewriteRule ^ index.html [L]
</IfModule>
